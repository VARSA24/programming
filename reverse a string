import java.io.*;
import java.util.*;
public class Solution {
    public static void main(String[] args) {
        Scanner mv=new Scanner(System.in);
        String str=mv.next();
        StringBuffer a=new StringBuffer(str);
        a.reverse();
        System.out.println(a);
    }
}


