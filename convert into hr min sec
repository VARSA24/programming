import java.io.*;
import java.util.*;
public class Solution {
    public static void main(String[] args) {
        Scanner mv=new Scanner(System.in);
        int h=mv.nextInt();
        int m=mv.nextInt();
        int s=mv.nextInt();
        m+=s/60;
        s=s%60;
        h+=m/60;
        m=m%60;
        System.out.println("Total Number of hours is "+h);
        System.out.println("Total Number of minutes is "+m);
        System.out.println("Total Number of seconds is "+s);     
    }
}

ip:5
239
39
op:Total Number of hours is 8
Total Number of minutes is 59
Total Number of seconds is 39
