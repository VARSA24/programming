import java.io.*;
import java.util.*;
public class Solution {
    public static void main(String[] args) {
        Scanner mv=new Scanner(System.in);
        {
            int x1=mv.nextInt();
            int y1=mv.nextInt();
            int x2=mv.nextInt();
            int y2=mv.nextInt();
            float a=(float)(x1+x2)/2;
            float b=(float)(y1+y2)/2;
            System.out.printf("Binoy's house is located at"+" ("+a+","+b+")");
          
        }
    }
}
